doctype html
html
    head
        title= title
        link(rel="stylesheet", href="/css/main.css")
    body#mainApp
        if username
            h2 Hello #{username}
            div
                form(action="/logout", name="logout", method="post")
                    input(type="submit", value="Log out")
        else
            div
                a(ui-sref='signup') Sign up
            div
                a(ui-sref='login') Log in

        div(ui-view="")

        script(src="/lib/angular/angular.min.js", type="text/javascript")
        script(src="/lib/angular-ui-router/release/angular-ui-router.min.js", type="text/javascript")
        script(src="/modules/core/core.client.module.js", type="text/javascript")
        script(src="/modules/core/config/core.client.routes.js", type="text/javascript")

        script(src="/modules/users/users.client.module.js", type="text/javascript")
        script(src="/modules/users/config/users.client.routes.js", type="text/javascript")
        script(src="/modules/users/controller/auth.client.controller.js", type="text/javascript")

        script(src="/application.js", type="text/javascript")